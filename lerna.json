{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "graphType": "all",
      "registry": "https://registry.npmjs.org/",
      "message": "chore: publish",
      "ignoreChanges": [
        "**/config/**",
        "**/.storybook/**",
        "**/*.spec.js",
        "**/*.spec.js.snap",
        "**/*.stories.js",
        "**/*.md"
      ]
    }
  }
}